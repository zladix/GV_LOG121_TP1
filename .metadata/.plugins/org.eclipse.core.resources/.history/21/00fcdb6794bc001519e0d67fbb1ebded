import java.awt.Color;
import java.awt.Graphics;

public class Ovale extends Forme{
	
	private int centreX;
	private int centreY;
	private int rayonH;
	private int rayonV;
	
	Ovale(int seq,Color couleur,int centreX,int centreY,int rayonH,int rayonV)
	{
		super(seq,couleur);
		this.centreX = centreX;
		this.centreY = centreY;
		this.rayonH = rayonH;
		this.rayonV = rayonV;
	}
	
	void dessiner(Graphics g)
	{
		g.setColor(couleur);
		g.drawOval(centreX, centreY, rayonH, rayonV);
	}

}
